
@{
    ViewBag.Title = "index";
}

<h2>Chat</h2>
<div id="discussion">
</div>
    <div class="form-group">
        <label for="inputlg">Message text</label>
        
        <input class="form-control input-lg" id="message" type="text">
        <button id="sendmessage" class="btn btn-primary">Send</button>
    </div>
<div class="container">
    <input type="hidden" id="displayname" />
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.Send = function (name, message) {
                // Add the message to the page.
                $('#discussion').append('<div class="row">'+
    '<div class="col-sm-1">'+
        '<div class="thumbnail">'+
            "<img class='img-responsive user-photo' src='https://ssl.gstatic.com/accounts/ui/avatar_2x.png'>"+
        '</div><!-- /thumbnail -->'+
    '</div>'+
    '<div class="col-sm-5">'+
        '<div class="panel panel-default">'+
            '<div class="panel-heading">'+
                '<strong>'+htmlEncode(name)+'</strong> <span class="text-muted">commented 5 days ago</span>'+
            '</div>'+
            '<div class="panel-body">'+
                htmlEncode(message)+
            '</div><!-- /panel-body -->'+
        '</div><!-- /panel panel-default -->'+
    '</div>');

            };
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    var name ="@User.Identity.Name";
                    chat.server.send(name,$("#message").val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
